extends layout

block content
  if user
    div.login-container
      img(src="/images/avatar.jpg" class="login__avatar")
      h1.login__header You're already Logged In 
      a.login__link(href="/") Go to Homepage
  else
    div.form-container
      h1= title
      form(method="POST" action="" class="form")
        input(type = "text" id="username" name="username" placeholder="Username" required )
        input(type = "password" id="password" name="password" placeholder="Password" required )
        button(type = "submit") Submit
        a(href="/signup") Don't have an account?
        if errors 
          ul 
            for error in errors
              li.error!= error.msg
