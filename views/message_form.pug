extends layout

block content
  if(user)
    div.form-container
      h1= title
      form(method="POST" action="" class="form")
          input(type = "text" id="title" name="title" placeholder="Title" required )
          textarea(id="content" name="content" placeholder="New Message")
          button(type = "submit") Submit
          if errors 
              ul 
              for error in errors
                  li!= error.msg
  else 
    div.login-container
            img(src="/images/avatar.jpg" class="login__avatar")
            h1.login__header Please Login first
            a.login__link(href="/login") Go to Login